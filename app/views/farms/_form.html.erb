<section class="section">
	<%= form_for(@farm) do |f| %>
	  <% if @farm.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@farm.errors.count, "error") %> prohibited this farm from being saved:</h2>
	      <ul>
	      <% @farm.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
		<%= f.label :name, "The name of the producer"%>
		<%= f.text_field :name %>
		<%= f.label :farmer, "Name of the humans involved in the production" %>
		<%= f.text_field :farmer %>
		<%= f.label :country, "Country produced in" %>
		<%= f.collection_select :country, Farm::COUNTRIES, :to_s, :to_s, :include_blank => true %>
		<%= f.label :region, "Region of the country selected" %>
		<%= f.text_field :region %>
		<%= f.label :elevation, "Elevation or elevation's of the land that the beans are grown on" %>
		<%= f.text_field :elevation %>
		<%= f.label :description, "The story of the producers and how they farm and process there beans" %>
		<%= f.text_area :description, :rows => 8 %>
		<% if params[:roast_id] %>
			<%= hidden_field_tag :roast_id, params[:roast_id] %>
		<% end %>
		<% if params[:batch_id] %>
			<%= hidden_field_tag :batch_id, params[:batch_id] %>
		<% end %>
	  <%= f.submit "Save", :class => "button"  %>
	<% end %>
</section>