<header class="clearfix">
	<h1>Producers</h1>
</header>
<% if can? :create, Farm %>
	<%= link_to 'New Producer', new_farm_path , :class => "button" %>
<% end %>
<section class="list">
	<% @farms.each do |farm| %>
		<p>
			<%= link_to farm.name_and_country , farm %>
		</p>
	<% end %>
</section>
<% if current_user.nil? %>
	<footer>
		<nav>
			<div><%= link_to "Log In", root_url %></div>
			<div><%= link_to 'Roasteries', roasteries_url %></div>
			<div><%= link_to 'About', about_path %></div>
		</nav>
	</footer>
<% end %>