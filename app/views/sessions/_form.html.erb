<% if notice %><span id="notice"><%= notice %></span><% end %>
<% if alert %><span id="alert"><%= alert %></span><% end %>
	<%= form_tag sessions_path do %>
  <%= label_tag :email %>
  <%= email_field_tag :email, params[:email] %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag "Log in", :class => "button" %>
<% end %>