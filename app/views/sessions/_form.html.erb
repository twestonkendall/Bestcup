<% if notice %><span id="notice"><%= notice %></span><% end %>
<% if alert %><span id="alert"><%= alert %></span><% end %>
<%= form_tag sessions_path do %>
  <%= email_field_tag :username, params[:username] %>
  <%= label_tag :username, "User" %>
  <%= password_field_tag :password %>
  <%= label_tag :password, "Pass." %>
  <%= submit_tag "Log in", :class => "button" %>
<% end %>