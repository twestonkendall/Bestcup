<h1>Show Roastery</h1>
<p>
  <b>Name:</b> <%= @roastery.name %><br>
	<b>Year opened:</b> <%= @roastery.year_opened %><br>
  <b>Description:</b> <%= @roastery.description %><br>
  <b>Contact:</b> <%= @roastery.contact %><br>
	<%= link_to 'Edit', edit_roastery_path(@roastery) %>
</p>
<% if @roasts.present? %>
<b>Roasts:</b>
<% end %>
<%= link_to 'New roast', new_roast_path(:roastery_id => @roastery.id) %>
<% @roasts.each do |roast| %>
	<table>
	  <tr>
			<td>The <b><%= roast.batch_number %></b> batch of</td>
			<td><b><%= roast.name %></b> roasted on</td>
			<td><b><%= roast.roasted_on.to_s(:long) %></b> was a</td>
			<td><b><%= roast.blends.sum(:weight) %></b> pound batch</td>
			<td><%= link_to "Details", roast %><td>
		<tr>
	<table>
<% end %>
<p>
	<%= link_to "Roasteries", roasteries_url %>
</p>