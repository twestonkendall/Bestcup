<h1>Show Roastery</h1>
<p>
  <b>Name:</b> <%= @roastery.name %><br>
	<b>Year opened:</b> <%= @roastery.year_opened %><br>
  <b>Description:</b> <%= @roastery.description %><br>
  <b>Contact:</b> <%= @roastery.contact %><br>
	<%= link_to 'Edit', edit_roastery_path(@roastery) %>
</p>
<% if @roasts.present? %>
<b>Roasts:</b>
<% end %>
<%= link_to 'New roast', new_roast_path(:roastery_id => @roastery.id) %>
<% @roasts.each do |roast| %>
			<p><%= link_to roast.name, roast %></p>
<% end %>
<p>
	<%= link_to "Back to Roasteries list", roasteries_url %>
</p>

<h1>Roastery Admins</h1>
<% @roastery_admins.each do |ra| %>
	<%= ra.user.email %> <% if ra.verified.present? %><b>Verified</b><% end %>
	| <%= link_to 'Remove', ra, :confirm => 'Are you sure?', :method => :delete %><br>
<% end %>
<%= render 'roastery_admins/form' %>
<h1>Roasters</h1>
<% if @roasters %>
	<% @roasters.each do |rsters| %>
		<%= rsters.user.email %> | <%= link_to 'Remove', rsters, :confirm => 'Are you sure?', :method => :delete %><br>
	<% end %>
<% end %>
<%= render 'roasters/form' %>
